@{
    ViewData["Title"] = "Cadastro Computador";
}
<h1>@ViewData["Title"]</h1>

<p>Deseja cadastrar um computador? Preencha os campos abaixo!</p>

    <form method="post">
        <p>
            <label for="id"><strong>Id:</strong></label>
            <input type="text" name="id" id="id" required>
        </p>
        <p>
            <label for="ram"><strong>RAM: </strong></label>
            <input type="text" name="ram" id="ram" required>
        </p>
          <p>
            <label for="processor"><strong>Processador: </strong></label>
            <input type="text" name="processor" id="processor" required>
        </p>

        <button asp-controller="Computer" asp-action="Create" class="btn btn-outline-success">Cadastrar</button>
    </form>